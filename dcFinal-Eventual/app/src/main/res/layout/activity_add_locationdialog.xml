<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:gravity="center"
        android:padding="10dp"
        android:textSize="15sp"
        android:layout_gravity="center_horizontal"
        android:text="@string/add_dialog_location_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:background="@color/colorFloatingButton"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/add_dialog_edit_location"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            app:met_iconLeft="@drawable/add_floatingbutton_location"
            android:hint="@string/add_edittext_location"
            android:padding="2dp"
            app:met_iconPadding="10dp"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/add_dialog_location_ok"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_below="@id/add_dialog_edit_location"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/add_dialog_ok"
            android:textColor="@color/colorFloatingButton4" />

        <TextView
            android:id="@+id/add_dialog_location_cancel"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_below="@id/add_dialog_edit_location"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toLeftOf="@id/add_dialog_location_ok"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/add_dialog_cancle"
            android:textColor="@color/cardview_light_background"
            android:textColorHighlight="@color/cardview_light_background" />


    </RelativeLayout>

</LinearLayout>